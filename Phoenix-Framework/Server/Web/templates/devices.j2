{% extends 'base.j2' %}
{% block title%}Phoenix-Framework | Devices{% endblock %}
{% block content %}
<!-- Devices Canvas -->
<div class="container">
<canvas id="device-canvas"></canvas>
</div>
<table id="table" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Hostname</th>
            <th>Address</th>
            <th>Last Online</th>
            <th>Connection Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for device in devices %}
        <tr class="dark-background">
            <td>{{ device.id }}</td>
            <td>{{ device.name }}</td>
            <td>{{ device.hostname }}</td>
            <td>{{ device.address }}</td>
            <td>{{ device.last_online }}</td>
            <td>{{ device.connection_date }}</td>
            <td>
                <button type="button" class="btn btn-warning"> Manage </button>
                <button class="btn btn-warning" onclick="createEdit({{ device.id -1 }})"><i class="material-icons">edit</i></button>
                <button class="btn btn-danger" onclick="deleteListener({{ device.id }})"><i class="material-icons">delete</i></button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<!-- Button trigger modal -->
<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#create-modal" onclick="resetModal()">
    Create a new listener
</button>

<!-- Create Modal -->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true"
    id="create-modal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content dark-background">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create a new listener</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="create-modal-body">
                <form id='create-form' action='/listeners/add' method='POST' onsubmit="sendCreate()">
                    <div class="form-group">
                        <label for="type" class="bmd-label-floating">Listener Type</label>
                        <select class="form-control" id="type" onchange="changeCreateType()">
                            {% for listener_type in listener_options %}
                            <option value="{{ listener_type }}">{{ listener_type }}</option>
                            {% endfor %}
                            <option value="custom">Test</option>

                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true"
    id="edit-modal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content dark-background">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit listener</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="edit-modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" onclick="sendEdit()">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- hidden forms for diffrent listener types -->
<!-- loop over all listener types -->

{% for listener_type in listener_options %}
<!-- create a form for each listener type -->
<form id="{{ listener_type }}-form" style="display: none;" target="/listeners/create">
    <!-- hidden type field -->
    <input type="hidden" name="type" value="{{ listener_type }}">
    {% for option in listener_options[listener_type] %}
    {% if option.type == "checkbox" %}
    <div class="form-check">
        <label class="form-check-label">
            {% if option.default %}<input class="form-check-input" type="checkbox" name="{{ option.name }}" checked=""
                id="{{ option.real_name }}-create">
            {% else %}<input class="form-check-input" type="checkbox" name="{{ option.name }}"
                id="{{ option.real_name }}-create">
            {% endif %}
            {{ option.name }}
            <span class="form-check-sign">
                <span class="check"></span>
            </span>
        </label>
    </div>
    <br>
    {% elif option.type == "address" %}
    <div class="form-group">
        <label for="{{ option.real_name }}">{{ option.name }}</label>
        <select class="form-control" id="{{ option.real_name}}-create" name="{{ option.real_name }}">
            {% for interface in network_interfaces %}
            <option id="{{ network_interfaces[interface] }}-address-edit" value="{{ interface }}">{{ interface }}: {{
                network_interfaces[interface] }}</option>
            {% endfor %}
        </select>
        <small class="form-text text-muted">{{ option.description }}</small>
    </div>
    {% elif option.type == "port" %}
    <div class="form-group">
        <label for="{{ option.real_name }}">{{ option.name }}</label>
        <input min="1" max="65535" type="number" class="form-control" id="{{ option.real_name }}-create"
            value="{{ option.default }}" name="{{ option.real_name }}">
        <small class="form-text text-muted">{{ option.description }}</small>
    </div>
    {% elif option.type == "table" %}
    <div class="form-group">
        <label for="{{ option.real_name }}" class="bmd-label-floating">{{ option.name }}</label>
        <select class="form-control" id="{{ option.real_name}}-create name=" {{ option.real_name }}">
            {% for object in option.type.choices%}
            <option value="{{ object.real_name }}-{{ object.id }}">{{ object.name }}</option>
            {% endfor %}
        </select>
        <small id="{{ option.real_name }}-description" class="form-text text-muted">{{ option.description }}</small>
    </div>
    {% else %}
    <div class="form-group">
        <label for="{{ option.real_name }}">{{ option.name }}</label>
        {% if option.required %}
        <input name="{{option.real_name}}" type="{{ option.type }}" class="form-control"
            id="{{ option.real_name }}-create" value="{{ option.default }}" required>
        {% else %}
        <input name="{{option.real_name}}" type="{{ option.type }}" class="form-control"
            id="{{ option.real_name }}-create" value="{{ option.default }}">
        {% endif %}
        <small id="{{ option.real_name }}-description" class="form-text text-muted">{{ option.description }}</small>
    </div>
    {% endif %}
    {% endfor %}
</form>
{% endfor %}
{% endblock %}
{% block scripts %}
// add devices to canvas using jinja
<script>
canvas = document.getElementById("device-canvas");
var ctx = canvas.getContext("2d");
var devices = {{ devices|tojson }};
for (var i = 0; i < devices.length; i++) {
    var device = devices[i];
    x = Math.floor(Math.random() * 1000);
    y = Math.floor(Math.random() * 1000);
    ctx.fillText(device.name, device.x + 40, device.y + 40);

    var image = new Image();
    image.src = "/static/img/" + device.os + ".png";
    image.onload = function () {
        ctx.drawImage(image, x, y);
    }

}
<script>
    let listeners = [
        {% for listener in listeners %}
    { { listener.to_json(commander, False, False) } },
    {% endfor %}
    ];
</script>
<script src="/static/js/listeners.js"></script>
{% endblock %}